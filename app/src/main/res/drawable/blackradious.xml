<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with curved top left and top right corners -->
    <item android:id="@+id/background_shape">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#2E2E2E"
                android:endColor="#2E2E2E" /> <!-- Set a slightly lighter color for shading -->
            <corners android:topLeftRadius="3dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="3dp"
                android:bottomRightRadius="3dp" />
        </shape>
    </item>





    <!-- Place your BottomNavigationView above the background shape -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>