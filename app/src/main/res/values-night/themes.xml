<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SohozBoi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@color/statusBar</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>


    <style name="BottomNavigationView.ActiveText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selected_color</item>
    </style>

    <style name="BottomNavigationView.InactiveText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/unselected_color</item>
    </style>

</resources>