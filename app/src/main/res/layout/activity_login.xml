<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">






            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/applogo"
                android:layout_gravity="right"/>






                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello!\nWelcome"
                    android:textStyle="bold"
                    android:textSize="35dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/mustafakamal"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter your login credentials"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/changa"
                android:textColor="#000000"
                android:layout_alignParentBottom="true"/>













            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:hintTextColor="#222222"
                android:textColorHint="#535353"
                android:hint="Email"
                app:boxStrokeColor="#000000"
                android:layout_marginTop="30dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:fontFamily="@font/changa"
                    android:importantForAutofill="no"
                    android:inputType="text" />


            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:hint="Password"
                app:hintTextColor="#191919"
                android:textColorHint="#5C5C5C"
                app:boxStrokeColor="#000000"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:fontFamily="@font/changa"
                    android:inputType="textPassword"  />


            </com.google.android.material.textfield.TextInputLayout>









            <TextView
                android:id="@+id/login"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/yelloradious"
                android:layout_marginTop="40dp"
                android:text="Log in"
                android:gravity="center"
                android:fontFamily="@font/changa"
                android:textSize="19dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/createaccount"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create an Account"
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="6dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:fontFamily="@font/changa"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forget your password?"
                    android:textSize="14dp"
                    android:gravity="center|right"
                    android:textStyle="bold"
                    android:layout_marginRight="25dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:fontFamily="@font/changa"/>


            </LinearLayout>



            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/progressbar"
                android:visibility="gone"/>




        </LinearLayout>






    </LinearLayout>



</LinearLayout>