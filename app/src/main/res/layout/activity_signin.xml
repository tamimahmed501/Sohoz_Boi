<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".signin">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:paddingLeft="10dp">


                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/applogo"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/changa"
                    android:padding="5dp"
                    android:text="Create An Account"
                    android:textColor="#000000"
                    android:textSize="28dp" />



            </RelativeLayout>



        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Name"
                app:hintTextColor="#272727"
                android:textColorHint="#515151"
                app:boxStrokeColor="#000000"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:cursorVisible="true" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/numberLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Email"
                app:hintTextColor="#272727"
                android:textColorHint="#515151"
                app:boxStrokeColor="#000000"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:cursorVisible="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/c0"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/changa"
                android:gravity="center"
                android:text="* Invalid number or Email"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:paddingLeft="19dp" />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hintTextColor="#272727"
                android:textColorHint="#515151"
                app:boxStrokeColor="#000000"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:cursorVisible="true" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c1"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/changa"
                    android:gravity="center"
                    android:text="* Length must be 6-10 character"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"
                    android:paddingLeft="15dp" />



                <TextView
                    android:id="@+id/c2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/changa"
                    android:gravity="center"
                    android:text="* Must a special caracter (!#*$@%)"
                    android:textColor="@color/textColor"
                    android:textSize="14dp"
                    android:paddingLeft="15dp" />









            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/cpasswordLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:hintTextColor="#272727"
                android:textColorHint="#515151"
                app:boxStrokeColor="#000000"
                android:hint="Confirm Password"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:cursorVisible="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/c3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:fontFamily="@font/changa"
                android:gravity="center"
                android:text="* Password not match"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:paddingLeft="19dp" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/refer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/changa"
                    android:gravity="center"
                    android:text="Referral ID (Optional)"
                    android:textColor="@color/textColor"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/refer"
                    android:layout_marginLeft="6dp"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="I agree with all privacy and policy."
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:buttonTint="#000000"
                android:fontFamily="@font/changa"
                android:textColor="#2C2B2C" />

            <TextView
                android:id="@+id/submit"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:text="Create An Account"
                android:gravity="center"
                android:background="@drawable/yelloradious"
                android:fontFamily="@font/changa"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/gotologin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Log in now."
                    android:textSize="14dp"
                    android:gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:textStyle="bold"
                    android:textColor="#020202"
                    android:fontFamily="@font/changa" />

            </LinearLayout>

        </LinearLayout>





    </RelativeLayout>


</LinearLayout>
