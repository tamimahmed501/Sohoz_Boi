<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">




    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/card"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="3dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/book"/>



            <TextView
                android:id="@+id/price"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/priceradious"
                android:text="ফ্রি বই"
                android:fontFamily="@font/rumaysa"
                android:textSize="11dp"
                android:gravity="center"
                android:textColor="@color/white"/>


        </RelativeLayout>






    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Book of ART"
        android:textStyle="bold"
        android:fontFamily="@font/mavenpro"
        android:layout_gravity="left"
        android:textSize="16dp"
        android:paddingLeft="2dp"
        android:maxLines="1"
        android:textColor="#232637"/>


    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Robert Downy"
        android:textStyle="normal"
        android:fontFamily="@font/mavenpro"
        android:layout_gravity="left"
        android:textSize="13dp"
        android:paddingLeft="2dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textColor="#A4232637"/>

</LinearLayout>