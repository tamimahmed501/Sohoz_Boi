<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".deposit">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/statusBar"
            android:layout_height="45dp">




                <ImageView
                    android:foreground="@drawable/ripple_effect"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/back"
                    android:scaleType="centerCrop"
                    android:padding="8dp"
                    android:id="@+id/backbutton"/>





            <TextView
                android:id="@+id/toptext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Payment Proccess"
                android:textStyle="bold"
                android:fontFamily="@font/changa"
                android:gravity="center"
                android:textSize="21dp"
                android:textColor="#000000"/>






        </RelativeLayout>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="বইটি ক্রয় করতে নিম্নলিখিত ধাপ অনুসরন করুন।"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/hind"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:text="*বিকাশ/নগদ অ্যাপ এ প্রবেশ করুন"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* সেন্ড-মানি সেকশনে যান।"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="* নিম্নোক্ত নাম্বারে পেমেন্ট সম্পন্ন করুন"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* ট্রান্সজেকশন্ন আইডি কপি করুন"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* ইনপুট বক্সে নম্বর, এমাউন্ট এবং ট্রান্সজেকশন আইডি দিন।"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>










                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*নিদৃষ্ট বইতে গিয়ে Buy Book তে ক্লিক করুন"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* উক্ত প্রসেস এর মাধ্যমে কেনা সফল হবে।"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="* কোনো সমস্যায় পড়লে অনুগ্রহ করে সাপোর্টে কথা বলুন।"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/hind"/>



                </LinearLayout>




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="35dp"
                    app:cardElevation="8dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="019YYYYYYYY"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:id="@+id/bknumber"
                            android:fontFamily="@font/changa"/>


                        <ImageView
                            android:id="@+id/copy1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:foreground="@drawable/ripple_effect"
                            android:padding="14dp"
                            android:paddingTop="4dp"
                            android:src="@drawable/copy1" />



                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:src="@drawable/bkash" />




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="8dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="018XXXXXXXX"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:id="@+id/nagadnumber"
                            android:fontFamily="@font/changa"/>


                        <ImageView
                            android:id="@+id/copy2"
                            android:foreground="@drawable/ripple_effect"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:padding="14dp"
                            android:paddingTop="4dp"
                            android:src="@drawable/copy1" />


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:padding="3dp"
                            android:src="@drawable/nagadlogo" />




                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </ScrollView>


    </LinearLayout>





</RelativeLayout>