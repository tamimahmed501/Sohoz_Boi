<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".depositmethod">



    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/statusBar"
        android:layout_marginBottom="20dp"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/back"
            android:foreground="@drawable/ripple_effect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backblack"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="false"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/changa"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Select Payment Method"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="2">



        <androidx.cardview.widget.CardView
            android:id="@+id/bkash"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:elevation="8dp"
            android:layout_weight="1"
            android:layout_margin="8dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bkash"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bKash"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/changa"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#252525"
                    android:paddingBottom="5dp"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bkashbg"
                    android:background="@drawable/paymentbf2"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/nagad"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:elevation="7dp"
            android:layout_weight="1"
            android:layout_margin="8dp">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/nagadlogo"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nagad"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/changa"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#252525"
                    android:paddingBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nagadbg"
                    android:background="@drawable/paymentbf2"/>
            </RelativeLayout>





        </androidx.cardview.widget.CardView>









    </LinearLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">




        <androidx.cardview.widget.CardView
            android:id="@+id/stripe"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:elevation="7dp"
            android:layout_centerInParent="true"
            android:layout_margin="8dp">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/stripe"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stripe"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/changa"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#252525"
                    android:paddingBottom="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/stripebg"
                    android:background="@drawable/paymentbf"/>


            </RelativeLayout>





        </androidx.cardview.widget.CardView>









    </RelativeLayout>









</LinearLayout>