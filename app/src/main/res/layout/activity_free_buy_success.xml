<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".free_buy_success">





    <ImageView
        android:foreground="@drawable/ripple_effect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/backblack"
        android:layout_marginTop="10dp"
        android:id="@+id/back"
        android:layout_marginLeft="10dp"/>



    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/success"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Successfully!"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:fontFamily="@font/changa"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your purchase. Your order has been successfully processed."
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="sans-serif"
        android:textColor="#535353"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Go to Dashboard"
        android:layout_margin="40dp"
        android:background="@drawable/loginbutton"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:fontFamily="@font/changa"
        android:textColor="@color/white"
        android:id="@+id/dashboard1"
        android:layout_gravity="center"/>





</LinearLayout>